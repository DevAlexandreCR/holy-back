# Server
NODE_ENV=development
APP_PORT=3000

# Database (choose either DATABASE_URL or fill all DB_* values)
DATABASE_URL=mysql://bible_user:bible_password@localhost:3306/bible_widget
DB_HOST=localhost
DB_PORT=3306
DB_USER=bible_user
DB_PASSWORD=bible_password
DB_NAME=bible_widget

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
RESET_TOKEN_EXPIRES_MINUTES=30

# Mail (SMTP)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=apikey
MAIL_PASSWORD=your-smtp-password
MAIL_SECURE=false
MAIL_FROM="HolyVerso <no-reply@holyverso.com>"

# Password reset link (used in emails and deep links)
PASSWORD_RESET_BASE_URL=holyverso://app/reset-password

# Bible API
BIBLE_API_BASE_URL=https://bible-api.deno.dev/api

# Cron
# Sync Bible versions daily (default 15 0 * * * => 00:15 UTC)
BIBLE_VERSIONS_CRON=15 0 * * *
# Default is 5 0 * * * (00:05 UTC); override if needed
CRON_SCHEDULE=5 0 * * *
